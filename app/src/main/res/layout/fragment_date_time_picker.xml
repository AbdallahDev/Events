<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.abdallahsarayrah.events.DateTimePickerFragment">

    <!-- TODO: Update blank fragment layout -->

    <DatePicker
        android:id="@+id/datePicker_dateTimePickerFragment_date"
        android:layout_width="wrap_content"
        android:layout_height="410dp"
        android:layout_gravity="center"
        android:datePickerMode="calendar" />

    <TimePicker
        android:id="@+id/datePicker_dateTimePickerFragment_time"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:timePickerMode="spinner" />

    <Button
        android:id="@+id/button_dateTimePickerFragment_pick"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pick" />

</LinearLayout>
